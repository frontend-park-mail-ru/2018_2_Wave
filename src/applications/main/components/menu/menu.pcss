.menu {
  grid-area: menu;
  display: flex;
  flex-direction: column;
  justify-content: center;

  &__tile-panel {
    overflow: hidden;
    width: 100%;
    height: 70%;
    align-items: center;
  }

  &__tile {
    justify-content: flex-end;

    height: 90%;
    width: 25vh;
    margin: 0 10px;

    &:hover > .tile__card {
      transform: translateY(-10px);
      background-color: #4462C4;
    }

    &:hover > .tile__card::after {
      transform: scale(.9);
      box-shadow: 0px 0px 30px 2px #4462C4;
    }

    &:hover .tile__name, &:hover .menu__icon {
      color: white;
      transform: scale(1.2);
    }
  }

  &__card {
    display: flex;
    justify-content: center;
    align-items: center;

    text-decoration: none !important;
    background-color: rgba(100%, 100%, 100%,0.1);

    &:after {
      bottom: -4px;
      transition: all 0.4s ease-out;
    }
  }

  &__icon {
    color: rgb(100%, 100%, 100%, 0.6);
    font-size: 56px;

    transition: all 0.3s ease-out;
  }
}
