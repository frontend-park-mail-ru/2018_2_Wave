.description
  if app
    .description__tile
      img.description__background(src='https://rasseki.com/' + app.image)
    .description__title= app.name
    .description__installs= 'Installs: ' + app.installs

    .description__about= app.about


    if app.added
      .description__button.remove-button remove
    else
      .description__button.add-button add
  else
    .description__about Click on app to see inf–æ about it
