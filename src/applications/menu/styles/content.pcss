.title {
  grid-area: title;
  display: flex;
  flex-direction: column;
  justify-content: center;

  font: calc(100vh / 10) Gilroy-ExtraBold;
  color: white;

  margin: 0 10px;
}


.content {
  grid-area: content;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;

  &__tile-panel {
    height: 80%;
    max-height: 400px;
  }

  &__tile {
    justify-content: center;

    width: 40vh;
  }
}
