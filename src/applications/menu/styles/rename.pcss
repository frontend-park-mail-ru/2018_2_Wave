.tile-background {
  border-radius: 5px;

  width: 100%;
  height: 100%;
}

.app-card::after {
  content:"kdlslk";
  position: absolute;
  width: 100%;
  bottom: -4px;
  z-index: -1;

  box-shadow: 0px 0px 20px 2px #005697;
  /* box-shadow: 0px 0px 5px 2px rgba(0%, 0%, 0%, 0.5); */
}


.title {
  grid-area: title;
  display: flex;
  flex-direction: column;
  justify-content: center;

  font-size: 60px;
  color: white;

  margin: 0 10px;
}
