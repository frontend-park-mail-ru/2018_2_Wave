@google-font Lato 400 latin;


/* CRUTCHES */

::-webkit-scrollbar {
  display: none;
}

body {
  background: black;
  /* overflow-y: hidden; */
  margin: 0;
}

.application {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* END OF CRUTCHES */


.terminal {
  background: black;
  color: greenyellow;
  font-family: 'Roboto Mono', monospace;
  font-size: 14px;

  padding: 0px 10px;
  border-style: solid;
  border-width: 0px 1px;
  border-color: greenyellow;

  width: 70vw;
  min-height: 100vh;

  -ms-overflow-style: none;
  overflow: -moz-scrollbars-none;
}

.terminal_line {
  display: flex;
  white-space: pre;
}

.terminal_textblock {
  display: flex;
  white-space: pre;
  align-items: center;
  justify-content: center;
}

.terminal__input {
  background: none;
  user-select: none;
  border: none;
  color: inherit;
  font-family: inherit;
  font-size: inherit;
  outline: none;

  padding: 0;
  margin: 0;
  width: 100%;
}
